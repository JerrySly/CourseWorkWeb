@using CourseWorkWeb.Models
@model IEnumerable<CourseWorkWeb.Models.Exercise>
<head>
    <link href="~/css/GenPage.css" rel="stylesheet" />
</head>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/pic/1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/pic/1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/pic/1.png" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="card-columns">
    @foreach (var exercise in Model)
    {
    <div class="card">
        <div class="card-img">
            <img class="card-img" src="@exercise.Img" alt="@exercise.Name">
        </div>
    </div>
            <div class="card-body">
                <h5 class="card-title">@exercise.Name</h5>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <button data-toggle="modal" data-target="#productModal" class="btn btn-primary">
                        More Info
                    </button>
                </small>
            </div>  
    }
</div>

